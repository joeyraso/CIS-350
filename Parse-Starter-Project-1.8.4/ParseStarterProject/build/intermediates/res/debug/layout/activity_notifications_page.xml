<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/buttonDashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Profile"
        android:onClick="displayProfile"/>
    <Button
        android:id="@+id/buttonCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/buttonDashboard"
        android:gravity="center"
        android:text="Cart"
        android:onClick="displayCart"/>
    <Button
        android:id="@+id/buttonMyPostedJobs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/buttonCart"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="My Jobs"
        android:onClick="displayMyPostedJobs"/>
    <Button
        android:id="@+id/buttonAddJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/buttonMyPostedJobs"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="New Job"
        android:onClick="addJob"/>

    <ListView
        android:id="@+id/notificationsList"
        android:layout_above="@+id/buttonDashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp">
    </ListView>

</RelativeLayout>
