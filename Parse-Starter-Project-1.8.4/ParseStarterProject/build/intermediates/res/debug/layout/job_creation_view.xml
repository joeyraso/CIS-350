<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffffff"
    style="@style/LogInFont"
    android:clickable="false">


    <TextView
        style="@style/LogInFont"
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jobPrompt"
        android:textSize="26sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <!--USERNAME-->
    <TextView
        android:id="@+id/startDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/startDate"
        android:textAppearance="?android:attr/textAppearanceMedium"
        style="@style/LogInFont"
        android:layout_above="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="46dp"
        android:layout_toLeftOf="@+id/startDate"
        android:layout_toStartOf="@+id/startDate" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startDate"
        style="@style/LogInFont"
        android:layout_alignTop="@+id/startDateText"
        android:layout_alignLeft="@+id/endDateText"
        android:layout_alignStart="@+id/endDateText"
        android:layout_alignBottom="@+id/startDateText"
        android:backgroundTint="#ff84dbff"
        android:background="@drawable/layout_bg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <!--Password-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jobName"
        android:id="@+id/textView4"
        android:textAppearance="?android:attr/textAppearanceMedium"
        style="@style/LogInFont"
        android:layout_alignBottom="@+id/jobNameText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        style="@style/LogInFont"
        android:id="@+id/jobNameText"
        android:background="@drawable/layout_bg"
        android:layout_below="@+id/textView1"
        android:layout_alignLeft="@+id/descriptionText"
        android:layout_alignStart="@+id/descriptionText"
        android:layout_marginTop="73dp"
        android:backgroundTint="#ff84dbff" />

    <!--Email-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jobDescription"
        android:id="@+id/textView5"
        style="@style/LogInFont"
        android:layout_alignBottom="@+id/descriptionText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/startDateText"
        android:layout_alignEnd="@+id/startDateText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        style="@style/LogInFont"
        android:id="@+id/descriptionText"
        android:autoText="false"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/jobNameText"
        android:layout_alignLeft="@+id/startDate"
        android:layout_alignStart="@+id/startDate"
        android:backgroundTint="#ff84dbff"
        android:background="@drawable/layout_bg"/>


    <!--Phone-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/endDate"
        android:id="@+id/textView6"
        style="@style/LogInFont"
        android:layout_alignTop="@+id/endDateText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/endDateText" />

    <EditText
        android:background="@drawable/layout_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        style="@style/LogInFont"
        android:id="@+id/endDateText"
        android:backgroundTint="#ff84dbff"
        android:layout_marginBottom="51dp"
        android:layout_above="@+id/submitButton"
        android:layout_alignLeft="@+id/submitButton"
        android:layout_alignStart="@+id/submitButton" />

    <!--Sign Up Button-->
    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="submitJob"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="33dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
